@using MvcForms.Forms
@namespace Lucid.Modules.ProjectCreation
@inherits Lucid.Infrastructure.Lib.MvcApp.MvcAppPage<IndexModel>
@model IndexModel
@{Setup(pi =>
    {
        pi.Title = "Generate Project";
    });}

<div class="base-form">

    @using (var form = Html.FormFor(Model.Cmd).Begin())
    {
        @form.Html.LabelledInputText("Project Name", m => m.Name)

        using (form.Html.FormButtons())
        {
            @form.Html.ButtonSubmit("Download .zip").NoPjax()
        }
    }

</div>
