@using MvcForms.Forms
@using MvcForms.Navigation
@using MvcForms.Styles
@using MvcForms.Styles.Bootstrap
@namespace Lucid.Modules.AppFactory.Design.Blueprints
@inherits Lucid.Infrastructure.Lib.MvcApp.MvcAppPage<StartEditModel>
@model StartEditModel
@{Setup(pi =>
      {
          pi.Title = Model.Title;
      });}

@using (var form = Html.FormFor(Model.Cmd).Begin())
{
    @form.Html.ErrorSummary()

    @form.Html.HiddenFor(m => m.BlueprintId)
    @form.Html.LabelledInputText("Name", m => m.Name)

    @using (form.Html.FormButtons())
    {
        @form.Html.ButtonSubmit(Model.ButtonText).Style(BootstrapButton.Success)
        @form.Html.LinkButtonCancelModal()
    }
}
