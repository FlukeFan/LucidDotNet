<Project>

  <ItemGroup>
    <Watch Include="**\*.cs" />
    <Watch Include="**\*.csproj" />
    <Watch Include="**\*.proj" />
    <Watch Include="**\*.targets" />
  </ItemGroup>

  <Target Name="GenerateWatchList">
    <WriteLinesToFile
      Overwrite="true"
      File="$(_DotNetWatchListFile)"
      Lines="@(Watch -> '%(FullPath)')" />
  </Target>

</Project>