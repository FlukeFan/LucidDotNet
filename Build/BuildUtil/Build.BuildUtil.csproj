<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <DebugType>full</DebugType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <Target Name="ExportFiles" AfterTargets="Publish">
    <Message Importance="High" Text="Shutting down dotnet.exe build-server so Build.BuildUtil.dll is not in use" />
    <Exec Command="dotnet build-server shutdown" />
    <RemoveDir Directories="../.build" />
    <ItemGroup>
      <BuildUtilBinaries Include="bin/Debug/netcoreapp2.1/publish/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(BuildUtilBinaries)" DestinationFolder="../.build/%(RecursiveDir)" />
  </Target>

  <ItemGroup>
    <PackageReference Include="altcover" Version="5.0.665" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.9.20" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="NUnit.ConsoleRunner" Version="3.9.0" />
    <PackageReference Include="ReportGenerator" Version="4.0.14" />
  </ItemGroup>

</Project>
