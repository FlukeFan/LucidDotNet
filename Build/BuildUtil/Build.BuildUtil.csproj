<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <DebugType>full</DebugType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>

  <Target Name="ExportFiles" AfterTargets="Publish">
    <Message Importance="High" Text="Shutting down dotnet.exe build-server so Build.BuildUtil.dll is not in use" />
    <Exec Command="dotnet build-server shutdown" />
    <RemoveDir Directories="../.build" />
    <RemoveDir Directories="../.build.forDelete" />
    <ItemGroup>
      <BuildUtilBinaries Include="bin/Debug/netcoreapp3.0/publish/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(BuildUtilBinaries)" DestinationFolder="../.build/%(RecursiveDir)" />
  </Target>

  <ItemGroup>
    <PackageReference Include="altcover" Version="6.5.739" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.3.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="NUnit.ConsoleRunner" Version="3.10.0" />
    <PackageReference Include="ReportGenerator" Version="4.3.6" />
  </ItemGroup>

  <ItemGroup>
    <None Include="toolsVersions.props" />
  </ItemGroup>
  
  <Target Name="ExportToolVersions" BeforeTargets="AfterBuild">
    <PropertyGroup>
      <AltCoverVersion Condition="'@(PackageReference)' == 'altcover'">%(PackageReference.Version)</AltCoverVersion>
      <ReportGeneratorVersion Condition="'@(PackageReference)' == 'ReportGenerator'">%(PackageReference.Version)</ReportGeneratorVersion>
    </PropertyGroup>
    <PropertyGroup>
      <ToolsVersionsProps>
<![CDATA[
<!-- auto generated by BuildUtil.csproj -->
<Project>
  <PropertyGroup>
    <AltCoverVersion>$(AltCoverVersion)</AltCoverVersion>
    <ReportGeneratorVersion>$(ReportGeneratorVersion)</ReportGeneratorVersion>
  </PropertyGroup>
</Project>
]]>
      </ToolsVersionsProps>
    </PropertyGroup>
    <WriteLinesToFile File="toolsVersions.props" Lines="$(ToolsVersionsProps)" Overwrite="true" />
  </Target>

</Project>
