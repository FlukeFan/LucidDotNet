<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <DebugType>full</DebugType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <Target Name="ExportFiles" AfterTargets="Publish">
    <Message Importance="High" Text="Shutting down dotnet.exe build-server so Build.BuildUtil.dll is not in use" />
    <Exec Command="dotnet build-server shutdown" />
    <RemoveDir Directories="../.build" />
    <ItemGroup>
      <BuildUtilBinaries Include="bin/Debug/netcoreapp2.1/publish/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(BuildUtilBinaries)" DestinationFolder="../.build/%(RecursiveDir)" />
  </Target>

  <ItemGroup>
    <PackageReference Include="altcover" Version="5.2.667" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.0.461" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="NUnit.ConsoleRunner" Version="3.10.0" />
    <PackageReference Include="ReportGenerator" Version="4.1.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="toolsVersions.props" />
  </ItemGroup>
  
  <Target Name="ExportToolVersions" BeforeTargets="AfterBuild">
    <PropertyGroup>
      <SoftTab>&#160;&#160;</SoftTab>
      <AltCoverVersion Condition="'@(PackageReference)' == 'altcover'">%(PackageReference.Version)</AltCoverVersion>
      <ReportGeneratorVersion Condition="'@(PackageReference)' == 'ReportGenerator'">%(PackageReference.Version)</ReportGeneratorVersion>
    </PropertyGroup>
    <ItemGroup>
      <ToolsVersionsLines Include="&lt;!-- auto generated by BuildUtil --&gt;" />
      <ToolsVersionsLines Include="&lt;Project&gt;" />
      <ToolsVersionsLines Include="  &lt;PropertyGroup&gt;" />
      <ToolsVersionsLines Include="    &lt;AltCoverVersion&gt;$(AltCoverVersion)&lt;/AltCoverVersion&gt;" />
      <ToolsVersionsLines Include="    &lt;ReportGeneratorVersion&gt;$(ReportGeneratorVersion)&lt;/ReportGeneratorVersion&gt;" />
      <ToolsVersionsLines Include="  &lt;/PropertyGroup&gt;" />
      <ToolsVersionsLines Include="&lt;/Project&gt;" />
    </ItemGroup>
    <WriteLinesToFile File="toolsVersions.props" Lines="@(ToolsVersionsLines)" Overwrite="true" />
  </Target>

</Project>
